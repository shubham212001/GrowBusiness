<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:background="#19A570"
    android:backgroundTint="#EFEFEF"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".StockActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#252B9A"
            android:textAlignment="center"
            app:title="Welcome to GrowB" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#252B9A"
            android:backgroundTint="#47AF64"
            android:text="Please Enter the Details to Continue"
            android:textAlignment="center"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            android:backgroundTint="#FDFBFB"
            android:textAlignment="center"
            android:textSize="18sp">

        </TextView>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"

        android:text="Company/Firm Name"
        android:textColor="#1C7009"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Firm Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/FirmName"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:focusable="auto"
            android:lines="8"
            android:textColor="#B53030" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"

        android:text="GSTIN"
        android:textColor="#1C7009"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter GSTIN">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gstin"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:focusable="auto"
            android:lines="8"
            android:textColor="#B53030" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"

        android:text="Address (With Pincode)"
        android:textColor="#1C7009"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Address">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_price"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:focusable="auto"
            android:lines="8"
            android:textColor="#B53030" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"

        android:text="Contact Info."
        android:textColor="#1C7009"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Contact Number
">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_price"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:focusable="auto"
            android:lines="8"
            android:textColor="#B53030" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/save_and_next"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="25sp"

        android:text="Save And Next"
        android:textSize="12sp" />


</LinearLayout>